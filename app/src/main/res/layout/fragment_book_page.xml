<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/bookImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="30dp"
                    android:maxHeight="50dp">
                </ImageView>
                <TextView
                    android:id="@+id/bookDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/downloadButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadFb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fb2"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />

                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadEpub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="epub"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />

                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadMobi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mobi"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />

                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TXT"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />

                    <Button
                        style="@style/Widget.Material3.Button"
                        android:id="@+id/downloadRtf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RTF"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>